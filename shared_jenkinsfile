@Library('my-library') _
pipeline {
    agent any

    environment {
        GIT_URL="https://github.com/vamshireddy903/django-notes-app.git"
        BRANCH_NAME ="main"
        IMAGE_NAME = "vamsi011/django-app"
        TAG = "v1.0.${BUILD_NUMBER}"
        FULL_IMAGE = "${IMAGE_NAME}:${TAG}"
    }

    stages {

        stage('Code Clone') {
            steps {
                script {
                    dockerUtils.cloneCode(env.GIT_URL, env.BRANCH_NAME)
                }
            }
        }

        stage('Docker Image Build') {
            steps {
                script {
                    dockerUtils.dockerBuild(env.FULL_IMAGE)
                }
            }
        }

        stage('Docker Image Push') {
            steps {
                script {
                    dockerUtils.dockerPush(env.FULL_IMAGE)
                }
            }
        }

    }
}
